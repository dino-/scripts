#!/bin/bash


# Find these for your system in xrandr output
laptopDisplay="LVDS"
extDisplay="DisplayPort-1"


basename=`basename $0`


function usage {
   cat <<USAGE
$basename - Change active outputs

usage:
   $basename [OPTIONS] PROFILE

options:
   -h, --help  This help info

profiles:
   laptop   Laptop display only
   ext      External monitor only
   both     Both of the above outputs, laptop on the left

USAGE

   exit 1
}


case "$1" in
   laptop)  switches="--output $laptopDisplay --auto --output $extDisplay --off" ;;
   ext)     switches="--output $laptopDisplay --off --output $extDisplay --auto" ;;
   both)    switches="--output $laptopDisplay --auto --output $extDisplay --auto --right-of $laptopDisplay" ;;
   *) usage ;;
esac


set -x
xrandr $switches
eval `cat $HOME/.fehbg`
