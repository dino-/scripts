#!/bin/bash


# Find these for your system in xrandr output
laptopDisplay="LVDS1"
extDisplay="HDMI1"


basename=`basename $0`


function usage {
   cat <<USAGE
$basename - Change active outputs

usage:
   $basename [OPTIONS] PROFILE

options:
   -h, --help  This help info

profiles:
   laptop   Laptop display only
   ext      External monitor only
   both     Both of the above outputs, laptop on the left

USAGE

   exit 1
}


case "$1" in
   laptop)
      set -x
      xrandr --output $laptopDisplay --auto --output $extDisplay --off
      xrandr --dpi 90
      ;;
   ext)
      set -x
      xrandr --output $laptopDisplay --off --output $extDisplay --auto
      xrandr --dpi 90
      ;;
   both)
      set -x
      xrandr --output $laptopDisplay --auto --output $extDisplay --auto --right-of $laptopDisplay
      xrandr --output $extDisplay --primary
      xrandr --dpi 90
      ;;
   *) usage ;;
esac

eval `cat $HOME/.fehbg`
