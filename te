#! /bin/sh


termBin=Eterm


if [ "$1" = "--help" ]
then
   cat <<USAGE
`basename $0` - Open new, named $termBin terminal window(s)
usage: te [title1] [title2] [...]
       te --help

Dino Morelli <dino@ui3.info>  2007-11-08

USAGE

   exit 1
fi


baseParams="-g 80x50"


if [ $# -lt "1" ]
then
   $termBin $baseParams &
else
   for title in $*
   do
      params="$baseParams -T $title -n $title"
      $termBin $params &
   done
fi
