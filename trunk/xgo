#! /bin/sh

#--------------------------------------------------------------------------
# $RCSfile$
#--------------------------------------------------------------------------
# $Revision: 21 $
# $Date: 2004-06-09 22:23:48 -0400 (Wed, 09 Jun 2004) $
# $Author: dmorelli $
#
# Script to start XFree86 with a certain layout.
#--------------------------------------------------------------------------

displayHelp ()
{
	echo "`basename $0` - start XFree86 with a specific layout"
	echo "usage:"
	echo "  xgo laptop|docked"
	echo "  xgo --help"
}


if [ "$1" = "" ]
then
	displayHelp
	exit 1
elif [ "$1" = "--help" ]
then
	displayHelp
	exit 1
fi

startx -- -layout $1
